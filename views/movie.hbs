<div class="container">
    <h1>Movie</h1>
    
    <div class="row row-cols-1 row-cols-md-3 g-4 my-5">
      <div class="col">
        <div class="card h-100">
          <img src="{{movie.image}}" class="card-img-top " alt="...">
          <div class="card-body">
            <h5 class="card-title">{{movie.title}}</h5>
            <p class="card-title"><strong>Director : {{movie.director}}</strong></p >
            <p class="card-text">
              <p class="card-text">{{movie.description}}</p>
            <p class="card-text"><strong>Stars : </strong>{{movie.stars}}</p>
            </p>
          </div>
        </div>
      </div>
    </div>
</div>